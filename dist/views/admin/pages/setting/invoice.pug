extends ../../layout/default.pug

block css
  //- animation CSS
  link(rel="stylesheet", href="/admin/assets/css/animate.css")
  //- Quill CSS
  link(rel="stylesheet", href="/admin/assets/plugins/quill/quill.snow.css")
  //- Datetimepicker CSS
  link(rel="stylesheet", href="/admin/assets/css/bootstrap-datetimepicker.min.css")
  //- Datatable CSS
  link(rel="stylesheet", href="/admin/assets/css/dataTables.bootstrap5.min.css")

block js
  //- Datatable JS
  script(src="/admin/assets/js/jquery.dataTables.min.js")
  script(src="/admin/assets/js/dataTables.bootstrap5.min.js")
  //- Datetimepicker JS
  script(src="/admin/assets/js/moment.min.js")
  script(src="/admin/assets/js/bootstrap-datetimepicker.min.js")
  //- Quill JS
  script(src="/admin/assets/plugins/quill/quill.min.js")
  //- Sticky-sidebar
  script(src="/admin/assets/plugins/theia-sticky-sidebar/ResizeSensor.js")
  script(src="/admin/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js")

block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0")
            form(action="invoice-settings.html")
              div(class="card-header")
                h4 Invoice Settings
              div(class="card-body ")
                ul(class="logo-company")
                  li
                    div(class="row")
                      div(class="col-md-4")
                        div(class="logo-info me-0 mb-3 mb-md-0")
                          h6 Invoice Logo
                          p Upload Logo of your Company to display in Invoice
                      div(class="col-md-6")
                        div(class="profile-pic-upload mb-0 me-0")
                          div(class="new-employee-field")
                            div(class="mb-3 mb-md-0")
                              div(class="image-upload mb-0")
                                input(type="file")
                                div(class="image-uploads")
                                  h4
                                    i(data-feather="upload")
                                    | Upload Photo
                              span For better preview recommended size is 450px x 450px. Max size 5mb.
                      div(class="col-md-2")
                        div(class="new-logo ms-auto")
                          a(href="invoice-settings.html#")
                            img(src="/admin/assets/img/logo-small.png", alt="Logo")
                div(class="localization-info")
                  div(class="row align-items-center")
                    div(class="col-sm-4")
                      div(class="setting-info")
                        h6 Invoice Prefix
                        p Add prefix to your invoice
                    div(class="col-sm-4")
                      div(class="localization-select")
                        input(type="text", class="form-control", value="INV -")
                  div(class="row align-items-center")
                    div(class="col-sm-4")
                      div(class="setting-info")
                        h6 Invoice Due
                        p Select due date  to display in Invoice
                    div(class="col-sm-4")
                      div(class="localization-select d-flex align-items-center fixed-width")
                        select(class="select")
                          option 5
                          option 6
                          option 7
                        span(class="ms-2") Days
                  div(class="row align-items-center")
                    div(class="col-sm-4")
                      div(class="setting-info")
                        h6 Invoice Round Off
                        p Value Roundoff in Invoice
                    div(class="col-sm-4")
                      div(class="localization-select d-flex align-items-center width-custom")
                        div(class="status-toggle modal-status d-flex justify-content-between align-items-center me-3")
                          input#user3(type="checkbox", class="check", checked)
                          label(for="user3", class="checktoggle")
                        select(class="select")
                          option Round Off Up
                  div(class="row align-items-center")
                    div(class="col-sm-4")
                      div(class="setting-info")
                        h6 Show Company Details
                        p Show / Hide Company Details in Invoice
                    div(class="col-sm-4")
                      div(class="localization-select d-flex align-items-center")
                        div(class="status-toggle modal-status d-flex justify-content-between align-items-center me-3")
                          input#user4(type="checkbox", class="check", checked)
                          label(for="user4", class="checktoggle")
                  div(class="row")
                    div(class="col-sm-4")
                      div(class="setting-info")
                        h6 Invoice Header Terms
                    div(class="col-sm-8")
                      div(class="mb-3")
                        textarea(rows="4", class="form-control", placeholder="Type your message")
                  div(class="row")
                    div(class="col-sm-4")
                      div(class="setting-info")
                        h6 Invoice Footer Terms
                    div(class="col-sm-8")
                      div(class="mb-3")
                        textarea(rows="4", class="form-control", placeholder="Type your message")
                div(class="d-flex align-items-center justify-content-end")
                  button(type="button", class="btn btn-secondary me-2") Cancel
                  button(type="submit", class="btn btn-primary") Save Changes
