block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug

          div(class="card flex-fill mb-0 w-50")
            div(class="card-header d-flex align-items-center")
              h5(class="card-title flex-grow-1 mb-0") Ban IP Address
              div(class="flex-shrink-0")
                button(class="btn btn-primary add-btn", data-bs-toggle="modal", data-bs-target="#add-banip")
                  i(class="ti ti-circle-plus me-1")
                  | Add Ban IP Address
            div(class="card-body p-0")
              div(class="table-responsive")
                table(class="table")
                  thead(class="thead-light")
                    tr
                      th IP Address
                      th Reason
                      th Created On
                      th(class="no-sort text-end")
                  tbody
                    tr
                      td(class="text-gray-9 fw-medium") 211.11.0.25
