  script(src="/admin/assets/plugins/intltelinput/js/intlTelInput.js")

block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0")
            div(class="card-header")
              h4(class="fs-18 fw-bold") Prefixes
            div(class="card-body")
              form(action="prefixes.html")
                div(class="row")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Product (SKU)
                      input(type="text", class="form-control", value="SKU -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Supplier
                      input(type="text", class="form-control", value="SUP -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Purchase
                      input(type="text", class="form-control", value="PU -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Purchase Return
                      input(type="text", class="form-control", value="PR -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Sales
                      input(type="text", class="form-control", value="SA -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Sales Return
                      input(type="text", class="form-control", value="SR -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Customer
                      input(type="text", class="form-control", value="CT -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Expense
                      input(type="text", class="form-control", value="EX -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Stock Transfer
                      input(type="text", class="form-control", value="ST -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Stock Adjustmentt
                      input(type="text", class="form-control", value="SA -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Sales Order
                      input(type="text", class="form-control", value="SO -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") POS Invoice
                      input(type="text", class="form-control", value="PINV -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Estimation
                      input(type="text", class="form-control", value="EST -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Transaction
                      input(type="text", class="form-control", value="TRN -")
                  div(class="col-xl-3 col-lg-6 col-md-4 col-sm-6")
                    div(class="mb-3")
                      label(class="form-label") Employee
                      input(type="text", class="form-control", value="EMP -")
                div(class="text-end settings-bottom-btn mt-0")
                  button(type="button", class="btn btn-secondary me-2") Cancel
                  button(type="submit", class="btn btn-primary") Save Changes
