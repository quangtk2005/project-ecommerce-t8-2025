block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          div#sidebar2(class="settings-sidebar")
            div(class="sidebar-inner slimscroll")
              div#sidebar-menu5(class="sidebar-menu")
                h4(class="fw-bold fs-18 mb-2 pb-2") Settings
                ul
                  li(class="submenu-open")
                    ul
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings fs-18")
                          span(class="fs-14 fw-medium ms-2") General Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="general-settings.html") Profile
                          li
                            a(href="security-settings.html") Security
                          li
                            a(href="notification.html") Notifications
                          li
                            a(href="connected-apps.html") Connected Apps
                      li(class="submenu")
                        a(href="javascript:void(0);", class="active subdrop")
                          i(class="ti ti-world fs-18")
                          span(class="fs-14 fw-medium ms-2") Website Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="system-settings.html") System Settings
                          li
                            a(href="company-settings.html") Company Settings 
                          li
                            a(href="localization-settings.html") Localization
                          li
                            a(href="prefixes.html", class="active") Prefixes
                          li
                            a(href="preference.html") Preference
                          li
                            a(href="appearance.html") Appearance
                          li
                            a(href="social-authentication.html") Social Authentication
                          li
                            a(href="language-settings.html") Language
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-device-mobile fs-18")
                          span(class="fs-14 fw-medium ms-2") App Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="invoice-settings.html") Invoice Settings
                          li
                            a(href="invoice-templates.html") Invoice Templates
                          li
                            a(href="printer-settings.html") Printer 
                          li
                            a(href="pos-settings.html") POS
                          li
                            a(href="signatures.html") Signatures
                          li
                            a(href="custom-fields.html") Custom Fields
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-device-desktop fs-18")
                          span(class="fs-14 fw-medium ms-2") System Settings
                          span(class="menu-arrow")
                        ul
                          li(class="submenu submenu-two")
                            a(href="javascript:void(0);") Email
                              span(class="menu-arrow inside-submenu")
                            ul
                              li
                                a(href="email-settings.html") Email Settings
                              li
                                a(href="email-templates.html") Email Templates
                          li(class="submenu submenu-two")
                            a(href="javascript:void(0);") SMS
                              span(class="menu-arrow inside-submenu")
                            ul
                              li
                                a(href="sms-settings.html") SMS Settings
                              li
                                a(href="sms-templates.html") SMS Templates
                          li
                            a(href="sms-settings.html") SMS Gateways
                          li
                            a(href="otp-settings.html") OTP
                          li
                            a(href="gdpr-settings.html") GDPR Cookies
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings-dollar fs-18")
                          span(class="fs-14 fw-medium ms-2") Financial Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="payment-gateway-settings.html") Payment Gateway
                          li
