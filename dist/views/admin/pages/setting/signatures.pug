block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0 w-50")
            div(class="card-header d-flex align-items-center justify-content-between")
              h4 Signatures
              div(class="page-btn")
                a(href="signatures.html#", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#add-custom-field")
                  i(class="ti ti-circle-plus me-1")
                  | Add Signature
            div(class="card-body")
              div(class="table-responsive")
                table(class="table border")
                  thead(class="thead-light")
                    tr
                      th Signature Name
                      th Signature
                      th Status
                      th(class="no-sort")
                  tbody
                    tr
                      td
                        h6 Allen
                      td
                        div
                          img(src="/admin/assets/img/invoice/signature.svg", alt="Img")
                      td
