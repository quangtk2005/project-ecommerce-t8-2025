                          i(class="ti ti-point-filled me-1")
                          | Active
                      td(class="action-table-data")
                        div(class="edit-delete-action")
                          a(class="me-2 p-2", href="signatures.html#")
                            i(data-feather="star", class="feather-edit")
                          a(class="me-2 p-2", href="signatures.html#", data-bs-toggle="modal", data-bs-target="#edit-custom-field")
                            i(data-feather="edit", class="feather-edit")
