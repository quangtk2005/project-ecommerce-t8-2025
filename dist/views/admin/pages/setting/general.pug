extends ../../layout/default.pug

block css
  //- animation CSS
  link(rel="stylesheet", href="/admin/assets/css/animate.css")
  //- Quill CSS
  link(rel="stylesheet", href="/admin/assets/plugins/quill/quill.snow.css")
  //- Datetimepicker CSS
  link(rel="stylesheet", href="/admin/assets/css/bootstrap-datetimepicker.min.css")

block js
  //- Datatable JS
  script(src="/admin/assets/js/jquery.dataTables.min.js")
  script(src="/admin/assets/js/dataTables.bootstrap5.min.js")
  //- Bootstrap Core JS
  script(src="/admin/assets/js/bootstrap.bundle.min.js")
  //- Datetimepicker JS
  script(src="/admin/assets/js/moment.min.js")
  script(src="/admin/assets/js/bootstrap-datetimepicker.min.js")
  //- Quill JS
  script(src="/admin/assets/plugins/quill/quill.min.js")
  //- Sticky-sidebar
  script(src="/admin/assets/plugins/theia-sticky-sidebar/ResizeSensor.js")
  script(src="/admin/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js")

block main
  div(class="settings-content")
    div(class="page-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4(class="fw-bold") Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0")
            div(class="card-header")
              h4(class="fs-18 fw-bold") Profile
            div(class="card-body")
              form(action="general-settings.html")
                div(class="card-title-head")
                  h6(class="fs-16 fw-bold mb-3")
                    span(class="fs-16 me-2")
                      i(class="ti ti-user")
                    | 
                    | Basic Information
                div(class="profile-pic-upload")
                  div(class="profile-pic")
                    span
                      i(class="ti ti-circle-plus mb-1 fs-16")
                      | Add Image
                  div(class="new-employee-field")
                    div(class="mb-0")
                      div(class="image-upload mb-0")
                        input(type="file")
                        div(class="image-uploads")
                          h4 Upload Image
                      span(class="fs-13 fw-medium mt-2")
                        | Upload an image below 2 MB, Accepted File format JPG, PNG
                div(class="row mb-3")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | First Name
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | Last Name
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | User Name
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | Phone Number
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | Email
                        span(class="text-danger") *
                      input(type="email", class="form-control")
                div(class="card-title-head")
                  h6(class="fs-16 fw-bold mb-3")
                    span(class="fs-16 me-2")
                      i(class="ti ti-map-pin")
                    | 
                    | Address Information
                div(class="row")
                  div(class="col-md-12")
                    div(class="mb-3")
                      label(class="form-label")
                        | Address
                        span(class="text-danger") *
                      input(type="email", class="form-control")
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | Country
                        span(class="text-danger") *
                      select(class="select")
                        option Select
                        option USA
                        option India
                        option French
                        option Australia
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | State
                        span(class="text-danger") *
                      select(class="select")
                        option Select
                        option Alaska
                        option Mexico
                        option Tasmania
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | City
                        span(class="text-danger") *
                      select(class="select")
                        option Select
                        option Anchorage
                        option Tijuana
                        option Hobart
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | Postal Code
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                div(class="text-end settings-bottom-btn mt-0")
                  button(type="button", class="btn btn-secondary me-2") Cancel
                  button(type="submit", class="btn btn-primary") Save Changes
