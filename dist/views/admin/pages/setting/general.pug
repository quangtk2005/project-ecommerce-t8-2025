block main
  div(class="settings-content")
    div(class="page-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4(class="fw-bold") Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          div#sidebar2(class="settings-sidebar")
            div(class="sidebar-inner slimscroll")
              div#sidebar-menu5(class="sidebar-menu")
                h4(class="fw-bold fs-18 mb-2 pb-2") Settings
                ul
                  li(class="submenu-open")
                    ul
                      li(class="submenu")
                        a(href="javascript:void(0);", class="active subdrop")
                          i(class="ti ti-settings fs-18")
                          span(class="fs-14 fw-medium ms-2") General Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="general-settings.html", class="active") Profile
                          li
                            a(href="security-settings.html") Security
                          li
                            a(href="notification.html") Notifications
                          li
                            a(href="connected-apps.html") Connected Apps
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-world fs-18")
                          span(class="fs-14 fw-medium ms-2") Website Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="system-settings.html") System Settings
                          li
                            a(href="company-settings.html") Company Settings 
                          li
                            a(href="localization-settings.html") Localization
                          li
                            a(href="prefixes.html") Prefixes
                          li
                            a(href="preference.html") Preference
                          li
                            a(href="appearance.html") Appearance
                          li
                            a(href="social-authentication.html") Social Authentication
                          li
                            a(href="language-settings.html") Language
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-device-mobile fs-18")
                          span(class="fs-14 fw-medium ms-2") App Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="invoice-settings.html") Invoice Settings
                          li
                            a(href="invoice-templates.html") Invoice Templates
                          li
                            a(href="printer-settings.html") Printer 
                          li
                            a(href="pos-settings.html") POS
                          li
                            a(href="signatures.html") Signatures
                          li
                            a(href="custom-fields.html") Custom Fields
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-device-desktop fs-18")
                          span(class="fs-14 fw-medium ms-2") System Settings
                          span(class="menu-arrow")
                        ul
                          li(class="submenu submenu-two")
                            a(href="javascript:void(0);") Email
                              span(class="menu-arrow inside-submenu")
                            ul
                              li
                                a(href="email-settings.html") Email Settings
                              li
                                a(href="email-templates.html") Email Templates
                          li(class="submenu submenu-two")
                            a(href="javascript:void(0);") SMS
                              span(class="menu-arrow inside-submenu")
                            ul
                              li
                                a(href="sms-settings.html") SMS Settings
                              li
                                a(href="sms-templates.html") SMS Templates
                          li
                            a(href="otp-settings.html") OTP
                          li
                            a(href="gdpr-settings.html") GDPR Cookies
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings-dollar fs-18")
                          span(class="fs-14 fw-medium ms-2") Financial Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="payment-gateway-settings.html") Payment Gateway
                          li
                            a(href="bank-settings-grid.html") Bank Accounts 
                          li
                            a(href="tax-rates.html") Tax Rates
                          li
                            a(href="currency-settings.html") Currencies
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings-2 fs-18")
                          span(class="fs-14 fw-medium ms-2") Other Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="storage-settings.html") Storage
                          li
                            a(href="ban-ip-address.html") Ban IP Address 
          div(class="card flex-fill mb-0")
            div(class="card-header")
              h4(class="fs-18 fw-bold") Profile
            div(class="card-body")
              form(action="general-settings.html")
                div(class="card-title-head")
                  h6(class="fs-16 fw-bold mb-3")
                    span(class="fs-16 me-2")
                      i(class="ti ti-user")
                    | 
                    | Basic Information
                div(class="profile-pic-upload")
                  div(class="profile-pic")
                    span
                      i(class="ti ti-circle-plus mb-1 fs-16")
                      | Add Image
                  div(class="new-employee-field")
                    div(class="mb-0")
                      div(class="image-upload mb-0")
                        input(type="file")
                        div(class="image-uploads")
                          h4 Upload Image
                      span(class="fs-13 fw-medium mt-2")
                        | Upload an image below 2 MB, Accepted File format JPG, PNG
                div(class="row mb-3")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | First Name
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | Last Name
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | User Name
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | Phone Number
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                  div(class="col-md-4")
                    div(class="mb-3")
                      label(class="form-label")
                        | Email
                        span(class="text-danger") *
                      input(type="email", class="form-control")
                div(class="card-title-head")
                  h6(class="fs-16 fw-bold mb-3")
                    span(class="fs-16 me-2")
                      i(class="ti ti-map-pin")
                    | 
                    | Address Information
                div(class="row")
                  div(class="col-md-12")
                    div(class="mb-3")
                      label(class="form-label")
                        | Address
                        span(class="text-danger") *
                      input(type="email", class="form-control")
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | Country
                        span(class="text-danger") *
                      select(class="select")
                        option Select
                        option USA
                        option India
                        option French
                        option Australia
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | State
                        span(class="text-danger") *
                      select(class="select")
                        option Select
                        option Alaska
                        option Mexico
                        option Tasmania
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | City
                        span(class="text-danger") *
                      select(class="select")
                        option Select
                        option Anchorage
                        option Tijuana
                        option Hobart
                  div(class="col-md-6")
                    div(class="mb-3")
                      label(class="form-label")
                        | Postal Code
                        span(class="text-danger") *
                      input(type="text", class="form-control")
                div(class="text-end settings-bottom-btn mt-0")
                  button(type="button", class="btn btn-secondary me-2") Cancel
                  button(type="submit", class="btn btn-primary") Save Changes
