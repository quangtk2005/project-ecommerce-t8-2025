block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          div#sidebar2(class="settings-sidebar")
            div(class="sidebar-inner slimscroll")
              div#sidebar-menu5(class="sidebar-menu")
                h4(class="fw-bold fs-18 mb-2 pb-2") Settings
                ul
                  li(class="submenu-open")
                    ul
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings fs-18")
                          span(class="fs-14 fw-medium ms-2") General Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="general-settings.html") Profile
                          li
                            a(href="security-settings.html") Security
                          li
                            a(href="notification.html") Notifications
                          li
                            a(href="connected-apps.html") Connected Apps
                      li(class="submenu")
                        a(href="javascript:void(0);", class="active subdrop")
                          i(class="ti ti-world fs-18")
                          span(class="fs-14 fw-medium ms-2") Website Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="system-settings.html") System Settings
                          li
                            a(href="company-settings.html") Company Settings 
                          li
                            a(href="localization-settings.html", class="active") Localization
                          li
                            a(href="prefixes.html") Prefixes
                          li
                            a(href="preference.html") Preference
                          li
                            a(href="appearance.html") Appearance
                          li
                            a(href="social-authentication.html") Social Authentication
                          li
                            a(href="language-settings.html") Language
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-device-mobile fs-18")
                          span(class="fs-14 fw-medium ms-2") App Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="invoice-settings.html") Invoice Settings
                          li
                            a(href="invoice-templates.html") Invoice Templates
                          li
                            a(href="printer-settings.html") Printer 
                          li
                            a(href="pos-settings.html") POS
                          li
                            a(href="signatures.html") Signatures
                          li
                            a(href="custom-fields.html") Custom Fields
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-device-desktop fs-18")
                          span(class="fs-14 fw-medium ms-2") System Settings
                          span(class="menu-arrow")
                        ul
                          li(class="submenu submenu-two")
                            a(href="javascript:void(0);") Email
                              span(class="menu-arrow inside-submenu")
                            ul
                              li
                                a(href="email-settings.html") Email Settings
                              li
                                a(href="email-templates.html") Email Templates
                          li(class="submenu submenu-two")
                            a(href="javascript:void(0);") SMS
                              span(class="menu-arrow inside-submenu")
                            ul
                              li
                                a(href="sms-settings.html") SMS Settings
                              li
                                a(href="sms-templates.html") SMS Templates
                          li
                            a(href="sms-settings.html") SMS Gateways
                          li
                            a(href="otp-settings.html") OTP
                          li
                            a(href="gdpr-settings.html") GDPR Cookies
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings-dollar fs-18")
                          span(class="fs-14 fw-medium ms-2") Financial Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="payment-gateway-settings.html") Payment Gateway
                          li
                            a(href="bank-settings-grid.html") Bank Accounts 
                          li
                            a(href="tax-rates.html") Tax Rates
                          li
                            a(href="currency-settings.html") Currencies
                      li(class="submenu")
                        a(href="javascript:void(0);")
                          i(class="ti ti-settings-2 fs-18")
                          span(class="fs-14 fw-medium ms-2") Other Settings
                          span(class="menu-arrow")
                        ul
                          li
                            a(href="storage-settings.html") Storage
                          li
                            a(href="ban-ip-address.html") Ban IP Address 
          div(class="card flex-fill mb-0")
            div(class="card-header")
              h4(class="fs-18 fw-bold") Localization
            div(class="card-body")
              form(action="localization-settings.html")
                div(class="border-bottom mb-3")
                  div(class="card-title-head")
                    h6(class="fs-16 fw-bold mb-3")
                      span(class="fs-18 me-2")
                        i(class="ti ti-list")
                      | 
                      | Basic Information
                  div
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Language
                          p Select Language of the Website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option English
                            option Spanish
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Language Switcher
                          p To display in all the pages
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          div(class="status-toggle modal-status d-flex justify-content-between align-items-center")
                            input#user3(type="checkbox", class="check", checked)
                            label(for="user3", class="checktoggle")
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Timezone
                          p Select Time zone in website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option UTC 5:30
                            option (UTC+11:00) INR
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Date format
                          p Select date format to display in website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option 01 Jan 2025
                            option Jul 22 2025
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Time Format
                          p Select time format to display in website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option 12 Hours
                            option 24 Hours
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Financial Year
                          p Select year for finance 
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option 2025
                            option 2026
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Starting Month
                          p Select starting month to display  
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option January
                            option February
                            option March
                div(class="border-bottom mb-3")
                  div(class="card-title-head")
                    h6(class="fs-16 fw-bold mb-3")
                      span(class="fs-18 me-2")
                        i(class="ti ti-credit-card")
                      | 
                      | Currency Settings
                  div(class="localization-info")
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Currency
                          p Select Time zone in website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option USA
                            option India
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Currency Symbol
                          p Select date format to display in website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option $
                            option €
                            option ¥
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Currency Position
                          p Select time format to display in website
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option $100
                            option $400
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Decimal Separator
                          p Select year for finance
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option .
                            option .
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Thousand Separator
                          p Select starting month to display
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option ,
                            option ,
                div(class="border-bottom mb-3")
                  div(class="card-title-head")
                    h6(class="fs-16 fw-bold mb-3")
                      span(class="fs-18 me-2")
                        i(class="ti ti-map")
                      | 
                      | Country Settings
                  div(class="localization-info")
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="mb-1 fw-medium") Countries Restriction
                          p Select countries restriction
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3")
                          select(class="select")
                            option Allow All Countries
                            option Deny All Countries
                div
                  div(class="card-title-head")
                    h6(class="fs-16 fw-bold mb-3")
                      span(class="fs-18 me-2")
                        i(class="ti ti-map")
                      | 
                      | File Settings
                  div(class="localization-info")
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3")
                          h6(class="fw-medium mb-1") Allowed Files
                          p Select files
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3 w-100")
                          div(class="mb-3")
                            input(class="input-tags form-control", type="text", data-role="tagsinput", name="specialist", value="JPG,GIF,PNG")
                    div(class="row align-items-center")
                      div(class="col-sm-6")
                        div(class="mb-3 mb-sm-0")
                          h6(class="fw-medium mb-1") Max File Size
                          p File size
                      div(class="col-sm-6")
                        div(class="localization-select ms-sm-auto mb-3 d-flex align-items-center mb-sm-0")
