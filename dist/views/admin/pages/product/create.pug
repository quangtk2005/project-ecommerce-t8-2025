block main
  div(class="page-header")
    div(class="add-item d-flex")
      div(class="page-title")
        h4(class="fw-bold") Create Product
        h6 Create new product
    ul(class="table-top-head")
      li
        a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
          i(class="ti ti-refresh")
      li
        a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
          i(class="ti ti-chevron-up")
    div(class="page-btn mt-0")
      a(href="product-list.html", class="btn btn-secondary")
        i(data-feather="arrow-left", class="me-2")
        | Back to Product
  form(action="https://dreamspos.dreamstechnologies.com/html/template/add-product.html", class="add-product-form")
    div(class="add-product")
      div#accordionSpacingExample(class="accordions-items-seperate")
        div(class="accordion-item border mb-4")
          h2#headingSpacingOne(class="accordion-header")
            div(class="accordion-button collapsed bg-white", data-bs-toggle="collapse", data-bs-target="#SpacingOne", aria-expanded="true", aria-controls="SpacingOne")
              div(class="d-flex align-items-center justify-content-between flex-fill")
                h5(class="d-flex align-items-center")
                  i(data-feather="info", class="text-primary me-2")
                  span Product Information
          div#SpacingOne(class="accordion-collapse collapse show", aria-labelledby="headingSpacingOne")
            div(class="accordion-body border-top")
              div(class="row")
                div(class="col-sm-6 col-12")
                  div(class="mb-3")
                    label(class="form-label") Store
                      span(class="text-danger ms-1") *
                    select(class="select")
                      option Select
                      option Electro Mart
                      option Quantum Gadgets
                      option Gadget World
                      option Volt Vault
                      option Elite Retail
                      option Prime Mart
                      option NeoTech Store
                div(class="col-sm-6 col-12")
                  div(class="mb-3")
                    label(class="form-label") Warehouse
                      span(class="text-danger ms-1") *
                    select(class="select")
                      option Select
                      option Lavish Warehouse
                      option Quaint Warehouse
                      option Traditional Warehouse
                      option Cool Warehouse
                      option Overflow Warehouse
                      option Nova Storage Hub
                      option Retail Supply Hub
                      option EdgeWare Solutions
              div(class="row")
                div(class="col-sm-6 col-12")
                  div(class="mb-3")
                    label(class="form-label") Product Name
                      span(class="text-danger ms-1") *
                    input(type="text", class="form-control")
                div(class="col-sm-6 col-12")
                  div(class="mb-3")
                    label(class="form-label") Slug
                      span(class="text-danger ms-1") *
                    input(type="text", class="form-control")
              div(class="row")
                div(class="col-sm-6 col-12")
                  div(class="mb-3 list position-relative")
                    label(class="form-label") SKU
                      span(class="text-danger ms-1") *
                    input(type="text", class="form-control list")
                    button(type="submit", class="btn btn-primaryadd")
                      | Generate
                div(class="col-sm-6 col-12")
                  div(class="mb-3")
                    label(class="form-label") Selling Type
                      span(class="text-danger ms-1") *
                    select(class="select")
                      option Select
                      option Online
                      option POS
              div(class="addservice-info")
                div(class="row")
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      div(class="add-newplus")
                        label(class="form-label") Category
                          span(class="text-danger ms-1") *
                        a(href="javascript:void(0);", data-bs-toggle="modal", data-bs-target="#add-product-category")
                          i(data-feather="plus-circle", class="plus-down-add")
                          span
                            | Add
                            | New
                      select(class="select")
                        option Select
                        option Computers
                        option Electronics
                        option Shoe
                        option Cosmetics
                        option Groceries
                        option Furniture
                        option Bags
                        option Phone
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      label(class="form-label") Sub Category
                        span(class="text-danger ms-1") *
                      select(class="select")
                        option Select
                        option Laptop
                        option Desktop
                        option Sneakers
                        option Formals
                        option Wearables
                        option Speakers
                        option Handbags
                        option Travel
                        option Sofa
              div(class="add-product-new")
                div(class="row")
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      div(class="add-newplus")
                        label(class="form-label") Brand
                          span(class="text-danger ms-1") *
                      select(class="select")
                        option Select
                        option Lenevo
                        option Beats
                        option Nike
                        option Apple
                        option Amazon
                        option Woodmart
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      div(class="add-newplus")
                        label(class="form-label") Unit
                          span(class="text-danger ms-1") *
                      select(class="select")
                        option Select
                        option Kg
                        option Pcs
                        option L
                        option dz
                        option bx
              div(class="row")
                div(class="col-sm-6")
                  div(class="mb-3")
                    div(class="add-newplus")
                      label(class="form-label") Barcode Symbology
                        span(class="text-danger ms-1") *
                    select(class="select")
                      option Select
                      option Code 128
                      option Code 39
                      option UPC-A
                      option UPC_E
                      option EAN-8
                      option EAN-13
                div(class="col-lg-6 col-sm-6 col-12")
                  div(class="mb-3")
                    label(class="form-label") Barcode Symbology
                    select(class="select")
                      option Choose
                      option Code 128
                      option Code 39
                      option UPC-A
                      option UPC-E
                      option EAN-8
                      option EAN-13
                div(class="col-lg-6 col-sm-6 col-12")
                  div(class="mb-3 list position-relative")
                    label(class="form-label") Item Barcode
                      span(class="text-danger ms-1") *
                    input(type="text", class="form-control list")
                    button(type="submit", class="btn btn-primaryadd")
                      | Generate
              //- Editor
              div(class="col-lg-12")
                div(class="summer-description-box")
                  label(class="form-label") Description
                  div(class="editor pages-editor")
                  p(class="fs-14 mt-1") Maximum 60 Words
              //- /Editor
        div(class="accordion-item border mb-4")
          h2#headingSpacingTwo(class="accordion-header")
            div(class="accordion-button collapsed bg-white", data-bs-toggle="collapse", data-bs-target="#SpacingTwo", aria-expanded="true", aria-controls="SpacingTwo")
              div(class="d-flex align-items-center justify-content-between flex-fill")
                h5(class="d-flex align-items-center")
                  i(data-feather="life-buoy", class="text-primary me-2")
                  span Pricing &amp; Stocks
          div#SpacingTwo(class="accordion-collapse collapse show", aria-labelledby="headingSpacingTwo")
            div(class="accordion-body border-top")
              div(class="mb-3s")
                label(class="form-label") Product Type
                  span(class="text-danger ms-1") *
                div(class="single-pill-product mb-3")
                  ul#pills-tab1(class="nav nav-pills", role="tablist")
                    li(class="nav-item", role="presentation")
                      span#pills-home-tab(class="custom_radio me-4 mb-0 active", data-bs-toggle="pill", data-bs-target="#pills-home", role="tab", aria-controls="pills-home", aria-selected="true")
                        input(type="radio", class="form-control", name="payment")
                        span(class="checkmark")
                        | Single Product
                    li(class="nav-item", role="presentation")
                      span#pills-profile-tab(class="custom_radio me-2 mb-0", data-bs-toggle="pill", data-bs-target="#pills-profile", role="tab", aria-controls="pills-profile", aria-selected="false")
                        input(type="radio", class="form-control", name="sign")
                        span(class="checkmark")
                        | Variable Product
              div#pills-tabContent(class="tab-content")
                div#pills-home(class="tab-pane fade show active", role="tabpanel", aria-labelledby="pills-home-tab")
                  div(class="single-product")
                    div(class="row")
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Quantity
                            span(class="text-danger ms-1") *
                          input(type="text", class="form-control")
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Price
                            span(class="text-danger ms-1") *
                          input(type="text", class="form-control")
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Tax Type
                            span(class="text-danger ms-1") *
                          select(class="select")
                            option Select
                            option Exclusive
                            option Inclusive
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Tax
                            span(class="text-danger ms-1") *
                          select(class="select")
                            option Select
                            option IGST (8%)
                            option GST (5%)
                            option SGST (4%)
                            option CGST (16%)
                            option Gst 18%
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Discount Type
                            span(class="text-danger ms-1") *
                          select(class="select")
                            option Select
                            option Percentage
                            option Fixed
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Discount Value
                            span(class="text-danger ms-1") *
                          input(class="form-control", type="text")
                      div(class="col-lg-4 col-sm-6 col-12")
                        div(class="mb-3")
                          label(class="form-label") Quantity Alert
                            span(class="text-danger ms-1") *
                          input(type="text", class="form-control")
                div#pills-profile(class="tab-pane fade", role="tabpanel", aria-labelledby="pills-profile-tab")
                  div(class="row select-color-add")
                    div(class="col-lg-6 col-sm-6 col-12")
                      div(class="mb-3")
                        label(class="form-label") Variant Attribute 
                          span(class="text-danger ms-1") *
                        div(class="row")
                          div(class="col-lg-10 col-sm-10 col-10")
                            select#colorSelect(class="form-control variant-select select-option")
                              option Choose
                              option Color
                              option(value="red") Red
                              option(value="black") Black
                          div(class="col-lg-2 col-sm-2 col-2 ps-0")
                            div(class="add-icon tab")
                              a(class="btn btn-filter", data-bs-toggle="modal", data-bs-target="#add-product-category")
                                i(class="feather feather-plus-circle")
                      div#input-show(class="selected-hide-color")
                        label(class="form-label") Variant Attribute 
                          span(class="text-danger ms-1") *
                        div(class="row align-items-center")
                          div(class="col-lg-10 col-sm-10 col-10")
                            div(class="mb-3")
                              input#inputBox(class="input-tags form-control", type="text", data-role="tagsinput", name="specialist", value="red, black")
                          div(class="col-lg-2 col-sm-2 col-2 ps-0")
                            div(class="mb-3 ")
                              a(href="javascript:void(0);", class="remove-color")
                                i(class="far fa-trash-alt")
                  div#variant-table(class="modal-body-table border")
                    div(class="table-responsive")
                      table(class="table border")
                        thead
                          tr
                            th Variantion
                            th Variant Value
                            th SKU
                            th Quantity
                            th Price
                            th(class="no-sort")
                        tbody
                          tr
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="color")
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="red")
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="1234")
                            td
                              div(class="product-quantity")
                                span(class="quantity-btn")
                                  i(data-feather="minus-circle", class="feather-search")
                                input(type="text", class="quntity-input form-control", value="2")
                                span(class="quantity-btn") +
                                  i(data-feather="plus-circle", class="plus-circle")
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="50000")
                            td(class="action-table-data")
                              div(class="edit-delete-action")
                                div(class="input-block add-lists")
                                  label(class="checkboxs")
                                    input(type="checkbox", checked)
                                    span(class="checkmarks")
                                a(class="me-2 p-2", href="javascript:void(0);", data-bs-toggle="modal", data-bs-target="#add-variation")
                                  i(data-feather="plus", class="feather-edit")
                                a(data-bs-toggle="modal", data-bs-target="#delete-modal", class="p-2", href="javascript:void(0);")
                                  i(data-feather="trash-2", class="feather-trash-2")
                          tr
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="color")
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="black")
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="2345")
                            td
                              div(class="product-quantity")
                                span(class="quantity-btn")
                                  i(data-feather="minus-circle", class="feather-search")
                                input(type="text", class="quntity-input form-control", value="3")
                                span(class="quantity-btn") +
                                  i(data-feather="plus-circle", class="plus-circle")
                            td
                              div(class="add-product")
                                input(type="text", class="form-control", value="50000")
                            td(class="action-table-data")
                              div(class="edit-delete-action")
                                div(class="input-block add-lists")
                                  label(class="checkboxs")
                                    input(type="checkbox", checked)
                                    span(class="checkmarks")
                                a(class="me-2 p-2", href="#", data-bs-toggle="modal", data-bs-target="#add-variation")
                                  i(data-feather="plus", class="feather-edit")
                                a(data-bs-toggle="modal", data-bs-target="#delete-modal", class="p-2", href="javascript:void(0);")
                                  i(data-feather="trash-2", class="feather-trash-2")
        div(class="accordion-item border mb-4")
          h2#headingSpacingThree(class="accordion-header")
            div(class="accordion-button collapsed bg-white", data-bs-toggle="collapse", data-bs-target="#SpacingThree", aria-expanded="true", aria-controls="SpacingThree")
              div(class="d-flex align-items-center justify-content-between flex-fill")
                h5(class="d-flex align-items-center")
                  i(data-feather="image", class="text-primary me-2")
                  span Images
          div#SpacingThree(class="accordion-collapse collapse show", aria-labelledby="headingSpacingThree")
            div(class="accordion-body border-top")
              div(class="text-editor add-list add")
                div(class="col-lg-12")
                  div(class="add-choosen")
                    div(class="mb-3")
                      div(class="image-upload image-upload-two")
                        input(type="file")
                        div(class="image-uploads")
                          i(data-feather="plus-circle", class="plus-down-add me-0")
                          h4 Add Images
                    div(class="phone-img")
                      img(src="/admin/assets/img/products/phone-add-2.png", alt="image")
                      a(href="javascript:void(0);")
                        i(data-feather="x", class="x-square-add remove-product")
                    div(class="phone-img")
                      img(src="/admin/assets/img/products/phone-add-1.png", alt="image")
                      a(href="javascript:void(0);")
                        i(data-feather="x", class="x-square-add remove-product")
        div(class="accordion-item border mb-4")
          h2#headingSpacingFour(class="accordion-header")
            div(class="accordion-button collapsed bg-white", data-bs-toggle="collapse", data-bs-target="#SpacingFour", aria-expanded="true", aria-controls="SpacingFour")
              div(class="d-flex align-items-center justify-content-between flex-fill")
                h5(class="d-flex align-items-center")
                  i(data-feather="list", class="text-primary me-2")
                  span Custom Fields
          div#SpacingFour(class="accordion-collapse collapse show", aria-labelledby="headingSpacingFour")
            div(class="accordion-body border-top")
              div
                div(class="p-3 bg-light rounded d-flex align-items-center border mb-3")
                  div(class=" d-flex align-items-center")
                    div(class="form-check form-check-inline")
                      input#warranties(class="form-check-input", type="checkbox", value="option1")
                      label(class="form-check-label", for="warranties") Warranties
                    div(class="form-check form-check-inline")
                      input#manufacturer(class="form-check-input", type="checkbox", value="option2")
                      label(class="form-check-label", for="manufacturer") Manufacturer
                    div(class="form-check form-check-inline")
                      input#expiry(class="form-check-input", type="checkbox", value="option2")
                      label(class="form-check-label", for="expiry") Expiry
                div(class="row")
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      label(class="form-label") Warranty
                        span(class="text-danger ms-1") *
                      select(class="select")
                        option Select
                        option Replacement Warranty
                        option On-Site Warranty
                        option Accidental Protection Plan
                  div(class="col-sm-6 col-12")
                    div(class="mb-3 add-product")
                      label(class="form-label") Manufacturer
                        span(class="text-danger ms-1") *
                      input(type="text", class="form-control")
                div(class="row")
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      label(class="form-label") Manufactured Date
                        span(class="text-danger ms-1") *
                      div(class="input-groupicon calender-input")
                        i(data-feather="calendar", class="info-img")
                        input(type="text", class="datetimepicker form-control", placeholder="dd/mm/yyyy")
                  div(class="col-sm-6 col-12")
                    div(class="mb-3")
                      label(class="form-label") Expiry On
                        span(class="text-danger ms-1") *
                      div(class="input-groupicon calender-input")
                        i(data-feather="calendar", class="info-img")
                        input(type="text", class="datetimepicker form-control", placeholder="dd/mm/yyyy")
