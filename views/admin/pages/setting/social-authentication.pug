extends ../../layout/default.pug

block css
  //- animation CSS
  link(rel="stylesheet", href="/admin/assets/css/animate.css")
  //- Quill CSS
  link(rel="stylesheet", href="/admin/assets/plugins/quill/quill.snow.css")
  //- Datetimepicker CSS
  link(rel="stylesheet", href="/admin/assets/css/bootstrap-datetimepicker.min.css")
  //- Datatable CSS
  link(rel="stylesheet", href="/admin/assets/css/dataTables.bootstrap5.min.css")

block js
  //- Datatable JS
  script(src="/admin/assets/js/jquery.dataTables.min.js")
  script(src="/admin/assets/js/dataTables.bootstrap5.min.js")
  //- Datetimepicker JS
  script(src="/admin/assets/js/moment.min.js")
  script(src="/admin/assets/js/bootstrap-datetimepicker.min.js")
  //- Quill JS
  script(src="/admin/assets/plugins/quill/quill.min.js")
  //- Sticky-sidebar
  script(src="/admin/assets/plugins/theia-sticky-sidebar/ResizeSensor.js")
  script(src="/admin/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js")

block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0")
            div(class="card-header")
              h4(class="fs-18 fw-bold") System Settings
            div(class="card-body pb-0")
              div(class="row")
                div(class="col-xl-6 col-lg-12 col-md-6 d-flex")
                  div(class="card")
                    div(class="card-body")
                      div(class="d-flex align-items-center justify-content-between mb-2")
                        div(class="d-flex align-items-center")
                          span(class="avatar avatar-lg bg-light border me-2")
                            img(src="/admin/assets/img/icons/fb-icon.svg", class="w-auto h-auto", alt="Img")
                          div
                            h5 Facebook
                        span(class="badge bg-outline-success") Connected
                      p(class="border-bottom pb-3 mb-3") Connect with friends, family and share updates, photos, moments with people you know.
                      div(class="d-flex align-items-center justify-content-between")
                        div
                          a(href="javascript:void(0);", class="btn btn-outline-secondary btn-sm", data-bs-toggle="modal", data-bs-target="#fb-connect")
                            i(class="ti ti-tool me-1")
                            | View Integration
                        div(class="status-toggle modal-status d-flex justify-content-between align-items-center ms-2")
                          input#user1(type="checkbox", class="check", checked)
                          label(for="user1", class="checktoggle")
                div(class="col-xl-6 col-lg-12 col-md-6 d-flex")
                  div(class="card")
                    div(class="card-body")
                      div(class="d-flex align-items-center justify-content-between mb-2")
                        div(class="d-flex align-items-center")
                          span(class="avatar avatar-lg bg-light border me-2")
                            img(src="/admin/assets/img/icons/twitter-icon.svg", class="w-auto h-auto", alt="Img")
                          div
                            h5 Twitter
                        span(class="badge bg-outline-light") Not connected
                      p(class="border-bottom pb-3 mb-3") Communicate and stay connected through the exchange of quick, frequent messages
