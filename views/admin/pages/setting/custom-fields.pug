                      td(class="action-table-data")
                        div(class="edit-delete-action")
                          a(class="me-2 p-2", href="custom-fields.html#", data-bs-toggle="modal", data-bs-target="#edit-custom-field")
                            i(data-feather="edit", class="feather-edit")
