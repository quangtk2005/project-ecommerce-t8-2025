extends ../../layout/default.pug

block css
  //- animation CSS
  link(rel="stylesheet", href="/admin/assets/css/animate.css")
  //- Quill CSS
  link(rel="stylesheet", href="/admin/assets/plugins/quill/quill.snow.css")
  //- Datetimepicker CSS
  link(rel="stylesheet", href="/admin/assets/css/bootstrap-datetimepicker.min.css")
  //- Datatable CSS
  link(rel="stylesheet", href="/admin/assets/css/dataTables.bootstrap5.min.css")

block js
  //- Datatable JS
  script(src="/admin/assets/js/jquery.dataTables.min.js")
  script(src="/admin/assets/js/dataTables.bootstrap5.min.js")
  //- Datetimepicker JS
  script(src="/admin/assets/js/moment.min.js")
  script(src="/admin/assets/js/bootstrap-datetimepicker.min.js")
  //- Quill JS
  script(src="/admin/assets/plugins/quill/quill.min.js")
  //- Sticky-sidebar
  script(src="/admin/assets/plugins/theia-sticky-sidebar/ResizeSensor.js")
  script(src="/admin/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js")

block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0 w-50")
            div(class="card-header d-flex align-items-center justify-content-between")
              h4 Custom Fields
              div(class="page-btn")
                a(href="custom-fields.html#", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#add-custom-field")
                  i(class="ti ti-circle-plus me-1")
                  | Add New Field
            div(class="card-body")
              div(class="table-responsive")
                table(class="table border")
                  thead(class="thead-light")
                    tr
                      th Module
                      th Label
                      th Type
                      th Default Value
                      th Required/Disable
                      th Status
                      th
                  tbody
                    tr
                      td
                        h6 Product
                      td
                        | Weight
                      td
                        | Number
                      td 0
                      td Required
                      td
                        span(class="badge badge-success d-inline-flex align-items-center badge-xs")
                          i(class="ti ti-point-filled me-1")
                          | Active
                      td(class="action-table-data")
                        div(class="edit-delete-action")
                          a(class="me-2 p-2", href="custom-fields.html#", data-bs-toggle="modal", data-bs-target="#edit-custom-field")
                            i(data-feather="edit", class="feather-edit")
                          a(class="p-2", href="javascript:void(0);", data-bs-toggle="modal", data-bs-target="#delete-modal")
                            i(data-feather="trash-2", class="feather-trash-2")
                    tr
                      td
                        h6 Customer
                      td
                        | Type
                      td
                        | Select
                      td Regular
