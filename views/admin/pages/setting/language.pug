block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0 w-50")
            div(class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3")
              h4 Language
              div(class="page-btn d-flex align-items-center ms-0")
                div(class="select-language")
                  select(class="select")
                    option Select Language
                    option English
                    option Arabic
                    option Chinese
                a(href="javascript:void(0);", class="btn btn-primary ms-3", data-bs-toggle="modal", data-bs-target="#add-language") Add Translation
            div(class="card-body")
              div(class="table-top")
                div(class="search-set")
                  div(class="search-input")
                    span(class="btn-searchset")
                      i(class="ti ti-search fs-14 feather-search")
                div(class="search-path")
                  div(class="d-flex align-items-center")
                    a(class="btn btn-secondary", href="javascript:void(0);")
                      i(data-feather="filter", class="filter-icon")
                      | Import Sample
              div(class="table-responsive no-pagination")
                table(class="table datatable border")
                  thead(class="thead-light")
                    tr
                      th(class="no-sort")
                        label(class="checkboxs")
                          input#select-all(type="checkbox")
                          span(class="checkmarks")
                      th Language
                      th Code
                      th RTL
                      th Default
                      th Total
                      th Done
                      th Progress
                      th Status
                      th(class="no-sort")
                  tbody
                    tr
                      td
                        label(class="checkboxs")
                          input(type="checkbox")
                          span(class="checkmarks")
                      td
