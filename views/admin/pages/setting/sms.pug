extends ../../layout/default.pug

block css
  //- animation CSS
  link(rel="stylesheet", href="/admin//admin/assets/css/animate.css")
  //- Quill CSS
  link(rel="stylesheet", href="/admin/assets/plugins/quill/quill.snow.css")
  //- Datetimepicker CSS
  link(rel="stylesheet", href="/admin/assets/css/bootstrap-datetimepicker.min.css")
  //- Datatable CSS
  link(rel="stylesheet", href="/admin/assets/css/dataTables.bootstrap5.min.css")
  //- Mobile CSS
  link(rel="stylesheet", href="/admin/assets/plugins/intltelinput/css/intlTelInput.css")
  link(rel="stylesheet", href="/admin/assets/plugins/intltelinput/css/demo.css")

block js
  //- Datatable JS
  script(src="/admin/assets/js/jquery.dataTables.min.js")
  script(src="/admin/assets/js/dataTables.bootstrap5.min.js")
  //- Datetimepicker JS
  script(src="/admin/assets/js/moment.min.js")
  script(src="/admin/assets/js/bootstrap-datetimepicker.min.js")
  //- Quill JS
  script(src="/admin/assets/plugins/quill/quill.min.js")
  //- Sticky-sidebar
  script(src="/admin/assets/plugins/theia-sticky-sidebar/ResizeSensor.js")
  script(src="/admin/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js")
  //- Validation
  script(src="/admin/assets/js/validation.js")
  //- Mobile Input
  script(src="/admin/assets/plugins/intltelinput/js/intlTelInput.js")

block main
  div(class="settings-content")
    div(class="page-header settings-pg-header")
      div(class="add-item d-flex")
        div(class="page-title")
          h4 Settings
          h6 Manage your settings on portal
      ul(class="table-top-head")
        li
          a(data-bs-toggle="tooltip", data-bs-placement="top", title="Refresh")
            i(class="ti ti-refresh")
        li
          a#collapse-header(data-bs-toggle="tooltip", data-bs-placement="top", title="Collapse")
            i(class="ti ti-chevron-up")
    div(class="row")
      div(class="col-xl-12")
        div(class="settings-wrapper d-flex")
          include ./partials/sidebar2.pug
          div(class="card flex-fill mb-0")
            div(class="card-header")
              h4 SMS Settings
            div(class="card-body pb-0")
              div(class="row")
                div(class="col-xl-4 col-lg-6 col-md-4 col-sm-6 d-flex")
                  div(class="card flex-fill")
                    div(class="card-body")
                      div(class="w-100 d-flex justify-content-between align-items-center")
                        div
                          img(src="/admin/assets/img/icons/sms-icon-01.svg", alt="Img")
                        div(class="d-flex align-items-center")
                          a(href="sms-settings.html#", data-bs-toggle="modal", data-bs-target="#nexmo-config")
                            i(data-feather="settings", class="me-2")
                          div(class="status-toggle modal-status d-flex justify-content-between align-items-center ms-2")
                            input#user1(type="checkbox", class="check", checked)
                            label(for="user1", class="checktoggle")
                div(class="col-xl-4 col-lg-6 col-md-4 col-sm-6 d-flex")
                  div(class="card flex-fill")
                    div(class="card-body")
                      div(class="w-100 d-flex justify-content-between align-items-center")
                        div
                          img(src="/admin/assets/img/icons/sms-icon-02.svg", alt="Img")
                        div(class="d-flex align-items-center")
                          a(href="sms-settings.html#", data-bs-toggle="modal", data-bs-target="#factor-config")
                            i(data-feather="settings", class="me-2")
                          div(class="status-toggle modal-status d-flex justify-content-between align-items-center ms-2")
                            input#user2(type="checkbox", class="check", checked)
                            label(for="user2", class="checktoggle")
                div(class="col-xl-4 col-lg-6 col-md-4 col-sm-6 d-flex")
                  div(class="card flex-fill")
                    div(class="card-body")
                      div(class="w-100 d-flex justify-content-between align-items-center")
                        div
                          img(src="/admin/assets/img/icons/sms-icon-03.svg", alt="Img")
                        div(class="d-flex align-items-center")
                          a(href="sms-settings.html#", data-bs-toggle="modal", data-bs-target="#twilio-config")
                            i(data-feather="settings", class="me-2")
                          div(class="status-toggle modal-status d-flex justify-content-between align-items-center ms-2")
                            input#user3(type="checkbox", class="check", checked)
                            label(for="user3", class="checktoggle")
